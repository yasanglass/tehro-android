<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tehro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary_dark</item>
        <item name="colorOnPrimary">@color/on_theme_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_primary</item>
        <item name="colorSecondaryVariant">@color/theme_primary_dark</item>
        <item name="colorOnSecondary">@color/on_theme_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/layer_midground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Tehro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tehro.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.Tehro.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

</resources>